{
  "name": "mcp-ws-test",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "description": "Test whether MCP App iframe can connect to localhost WebSocket",
  "scripts": {
    "build:html": "cross-env INPUT=mcp-app.html vite build",
    "start:http": "npm run build:html && npx tsx main.ts",
    "start:stdio": "npm run build:html && npx tsx main.ts --stdio",
    "ws-server": "npx tsx ws-echo-server.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/ext-apps": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.24.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "ws": "^8.18.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/node": "22.10.0",
    "@types/ws": "^8.5.13",
    "cross-env": "^10.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^6.0.0",
    "vite-plugin-singlefile": "^2.3.0"
  }
}
